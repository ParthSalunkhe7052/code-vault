{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodeVault",
  "version": "1.0.0",
  "identifier": "com.codevault.app",
  "build": {
    "beforeDevCommand": "powershell -Command \"Set-Location frontend; npm run dev\"",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "powershell -Command \"Set-Location frontend; npm run build\"",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CodeVault - License Management",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser"
      }
    }
  }
}